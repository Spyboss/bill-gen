{
  "name": "tmr-bill-generator-api",
  "version": "1.0.0",
  "description": "TMR Motorcycle Bill Generator API",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "start": "node -r dotenv/config dist/server.js",
    "dev": "tsx watch src/server.ts",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p dist/templates && cp -r src/templates/* dist/templates/ 2>/dev/null || true",
    "copy-assets-win": "if not exist dist\\templates mkdir dist\\templates && if exist src\\templates\\* xcopy /y /s src\\templates\\* dist\\templates\\",
    "lint": "eslint . --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "bill",
    "invoice",
    "generator",
    "motorcycle",
    "api"
  ],
  "author": "TMR",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "mongodb": "^6.3.0",
    "mongoose": "^8.1.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.14.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.5",
    "@types/pdfkit": "^0.13.3",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.3",
    "tsx": "^4.19.3",
    "vitest": "^1.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
